<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.jorge.meurecordatorio.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/relativeUp"
        android:layout_centerInParent="true"
        android:background="@color/colorPrimaryDark"
        >

        <TextView
            android:id="@+id/TextViewEntrevistadoButton"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:text="Lista de Entrevistado"
            android:background="@drawable/rounded_corner"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"


            />

        <ImageView
            android:id="@+id/imageViewMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            card_view:srcCompat="@mipmap/ic_menu" />
    </RelativeLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/relativeEntrevistado"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintTop_toBottomOf="@+id/relativeUp">

        <TextView
            android:id="@+id/entrevistado_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entrevistado"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/padding_text" />

        <TextView
            android:id="@+id/entrevistado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_text"
            android:text="0"
            android:textSize="20sp"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/entrevistado_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_text"
            android:text=""
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            app:layout_constraintStart_toEndOf="@+id/entrevistado"


            />


        <TextView
            android:id="@+id/grau_parentesco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimaryDark"
            android:hint="                  "
            android:padding="@dimen/padding_text"
            android:text="0"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/grau_parentesco_hint" />

        <TextView
            android:id="@+id/grau_parentesco_nome"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimaryDark"
            android:hint="                   "
            android:padding="@dimen/padding_text"
            android:text="0"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/ocasiao_consumo"
            app:layout_constraintTop_toBottomOf="@+id/grau_parentesco_hint" />

        <TextView
            android:id="@+id/grau_parentesco_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grau parentesco"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/entrevistado" />

        <TextView
            android:id="@+id/dia_atipico"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:padding="@dimen/padding_text"
            android:text="Não"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/grau_parentesco_nome"
            app:layout_constraintTop_toBottomOf="@+id/dia_atipico_hint" />

        <TextView
            android:id="@+id/dia_atipico_hint"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="Dia atípico"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/grau_parentesco_nome"
            app:layout_constraintTop_toBottomOf="@+id/entrevistado" />


        <TextView
            android:id="@+id/tv_quantity"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/rounded_textview"
            android:gravity="center"
            android:text="0"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <com.darwindeveloper.wcviewpager.WCViewPagerIndicator
        android:id="@+id/wcviewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:indicatorSelectedColor="@color/colorPrimary"
        app:indicatorsColor="#d2d2d2"
        app:numberSelectedColor="#fff"
        app:layout_constraintTop_toBottomOf="@+id/relativeEntrevistado"
        app:numbersColor="@color/colorPrimary"

        app:showNumbers="true" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/wcviewpager">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_alimento"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />


        <ProgressBar
            android:id="@+id/pb_loading_indicator"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:visibility="invisible" />
    </FrameLayout>







</android.support.constraint.ConstraintLayout>
