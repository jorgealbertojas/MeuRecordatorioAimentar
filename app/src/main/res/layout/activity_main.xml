<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="287dp"
        tools:layout_editor_absoluteY="0dp">

        <RelativeLayout
            android:id="@+id/relativeUp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:background="@color/colorPrimaryDark">

            <ImageView
                android:id="@+id/imageViewMenu"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/colorPrimaryDark"
                android:src="@mipmap/ic_menu"
                android:visibility="visible" />

            <TextView
                android:id="@+id/TextViewEntrevistadoButton"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/rounded_corner_branco"
                android:gravity="center"
                android:text="Lista de Entrevistado"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold"


                />


        </RelativeLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/relativeEntrevistado"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintTop_toBottomOf="@+id/relativeUp">

            <TextView
                android:id="@+id/entrevistado_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entrevistado"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/padding_text" />

            <TextView
                android:id="@+id/entrevistado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_text"
                android:text="0"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/entrevistado_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_text"
                android:text=""
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/entrevistado"


                />


            <TextView
                android:id="@+id/grau_parentesco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/colorPrimaryDark"
                android:hint="                  "
                android:padding="@dimen/padding_text"
                android:text="0"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@+id/grau_parentesco_hint" />

            <TextView
                android:id="@+id/grau_parentesco_nome"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:background="@color/colorPrimaryDark"
                android:hint="                   "
                android:padding="@dimen/padding_text"
                android:text="0"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/ocasiao_consumo"
                app:layout_constraintTop_toBottomOf="@+id/grau_parentesco_hint" />

            <TextView
                android:id="@+id/grau_parentesco_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grau parentesco"
                android:textColor="@color/colorAccent"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@+id/entrevistado" />

            <TextView
                android:id="@+id/dia_atipico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:padding="@dimen/padding_text"
                android:text="NÃO"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/grau_parentesco_nome"
                app:layout_constraintTop_toBottomOf="@+id/dia_atipico_hint" />

            <TextView
                android:id="@+id/dia_atipico_hint"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="Dia atípico"
                android:textColor="@color/colorAccent"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@+id/grau_parentesco_nome"
                app:layout_constraintTop_toBottomOf="@+id/entrevistado" />


            <TextView
                android:id="@+id/tv_quantity"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/rounded_textview"
                android:gravity="center"
                android:text="0"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:scaleType="fitXY"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_quantity"
                app:srcCompat="@mipmap/exclamation" />
        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/proximo"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/proximo"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/anterior"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:scaleType="fitStart"

                    android:src="@mipmap/anterior"
                    android:visibility="invisible" />
            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"

                android:layout_height="match_parent">

                <FrameLayout
                    android:id="@+id/FrameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_marginBottom="8dp">


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_alimento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_alimento_check"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="invisible" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_alimento_check_completo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="invisible" />


                    <ProgressBar
                        android:id="@+id/pb_loading_indicator"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_gravity="center"
                        android:visibility="invisible" />
                </FrameLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>



</android.support.constraint.ConstraintLayout>

